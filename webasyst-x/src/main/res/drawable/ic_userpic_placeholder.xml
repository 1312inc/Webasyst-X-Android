<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="0.5dp"
        android:right="0.5dp"
        android:left="0.5dp"
        android:bottom="0.5dp">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="44dp" />
            <gradient
                android:startColor="?colorUserpicGradientStart"
                android:endColor="?colorUserpicGradientEnd"
                android:angle="45"/>
        </shape>
    </item>
    <item
        android:drawable="@drawable/ic_userpic_placeholder_face"/>
</layer-list>
