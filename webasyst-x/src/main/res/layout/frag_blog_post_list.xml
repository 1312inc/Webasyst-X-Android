<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.webasyst.x.blog.postlist.PostListFragment">

    <data>
        <import type="com.webasyst.x.blog.postlist.PostListViewModel" />
        <variable
            name="viewModel"
            type="com.webasyst.x.blog.postlist.PostListViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:gone="@{viewModel.state != PostListViewModel.STATE_LOADED}"
            tools:itemCount="10"
            tools:listitem="@layout/row_shop_order_list_item" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:gone="@{viewModel.state != PostListViewModel.STATE_LOADING}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/empty_api_response"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:gone="@{viewModel.state != PostListViewModel.STATE_LOADED_EMPTY}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@{@string/data_fetch_error(viewModel.errorText)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="?colorError"
            app:gone="@{viewModel.state != PostListViewModel.STATE_ERROR}" />
    </FrameLayout>
</layout>
