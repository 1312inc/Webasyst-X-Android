<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.WebasystX" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorError">#C40000</item>
        <item name="colorSelected">#01C853</item>
        <item name="screenPaddingHorizontal">16dp</item>
        <item name="navigationDrawerHeaderHeight">188dp</item>

        <item name="colorOnPrimaryLighter">@color/color_on_primary_lighter</item>

        <item name="colorOnSurfaceHighEmphasis">@color/on_surface_high_emphasis</item>
        <item name="colorOnSurfaceMediumEmphasis">@color/on_surface_medium_emphasis</item>

        <item name="colorUserpicFace">@color/userpicFace</item>
        <item name="colorUserpicGradientStart">@color/userpicGradientStart</item>
        <item name="colorUserpicGradientEnd">@color/userpicGradientEnd</item>
    </style>

    <style name="Theme.WebasystX.TextAppearance" parent="TextAppearance.MaterialComponents.Body1" />
    <style name="Theme.WebasystX.TextAppearance.AuthAppTitle">
        <item name="android:textColor">@color/highContrastOnSurface</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.WebasystX.TextAppearance.IntroTitle" parent="AppIntroDefaultHeading">
        <item name="android:textColor">?colorOnSurfaceHighEmphasis</item>
    </style>
    <style name="Theme.WebasystX.TextAppearance.IntroDescription" parent="AppIntroDefaultText">
        <item name="android:textColor">?colorOnSurfaceHighEmphasis</item>
    </style>
    <style name="Theme.WebasystX.TextAppearance.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.WebasystX.TextAppearance.Headline4">
        <item name="android:textSize">34sp</item>
    </style>
    <style name="Theme.WebasystX.TextAppearance.Overline">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Theme.WebasystX.TextAppearance.Subtitle1">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.WebasystX.TextAppearance.Secondary">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.WebasystX.TextAppearance.Caption">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Theme.WebasystX.TextAppearance.Body1">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.WebasystX.TextAppearance.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.WebasystX.Toolbar_SignIn" parent="Widget.MaterialComponents.Toolbar">
        <item name="toolbarNavigationButtonStyle">@style/Theme.WebasystX.Toolbar_Button_Tinted</item>
    </style>
    <style name="Theme.WebasystX.Toolbar_Button_Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/primary</item>
    </style>

    <style name="Theme.WebasystX.Button_Round" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.WebasystX.Rounded</item>
    </style>
    <style name="Theme.WebasystX.Button_Text" parent="Widget.MaterialComponents.Button">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearance.WebasystX.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">42dp</item>
    </style>

    <style name="ShapeAppearance.WebasystX.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.WebasystX.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/btn_stroke_color_selector</item>
    </style>

</resources>
